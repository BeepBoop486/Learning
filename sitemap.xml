---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://sitemaps.org/schemas/sitemap/0.9">
  {% for post in site.posts %}
    {% assign course = site.data.courses[post.course] %}
    <url>
      <loc>{{ post.url | prepend: site.baseurl | prepend: site.url }}</loc>
      <changefreq>weekly</changefreq>
      <priority>0.8</priority>
      <lastmod>{{ post.date | date: "%Y-%m-%d" }}</lastmod>
    </url>
    {% for section in course.contents %}
      {% for lesson in section.contents %}
        <url>
          <loc>{{ lesson.url | prepend: site.baseurl | prepend: site.url }}</loc>
          <changefreq>weekly</changefreq>
          <priority>0.8</priority>
          <lastmod>{{ post.date | date: "%Y-%m-%d" }}</lastmod>
        </url>
      {% endfor %}
    {% endfor %}
  {% endfor %}
</urlset>
